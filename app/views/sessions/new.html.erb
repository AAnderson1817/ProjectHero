<h1>Start Doing</h1>

<%= form_tag sessions_path,{:class => 'form-horizontal'} do %>
    <div class="row"><legend class="col-md-4 col-md-offset-4"></legend></div>
    <fieldset>
           <div class="form-group" id="text">
            <%= label_tag :email, 'Email', class: 'col-md-4 control-label' %>
            <div class="col-md-5" id="text">
                <%= text_field_tag :email, params[:email], class: 'form-control' %>
            </div>
        </div>
        <div class="form-group" id="text">
            <%= label_tag :password, 'Password', class: 'col-md-4 control-label' %>
            <div class="col-md-5" id="text">
                <%= password_field_tag :password, nil, class: 'form-control' %>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-8 col-md-offset-4">
                <%= submit_tag 'Sign In', class: 'btn btn-success' %>
                <%= link_to "It's my first tiiime!", new_user_path, class: 'btn btn-info' %>
            </div>
        </div>
    </fieldset>
<% end %>

