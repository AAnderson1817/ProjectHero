<h1>Goal: Create Account</h1>
<div id="text">
<%= form_for @user do |u| %>
    <hr>
    <div id="text">  User Name: </div><%= u.text_field :name %><br>
      <div id="text">User Email: </div><%= u.text_field :email %> <br>
      <div id="text">User Password: </div><%= u.password_field :password %></div>
    <br>

    <div class="col-md-2 col-md-offset-5"><%= u.submit %></div>
<% end %>



