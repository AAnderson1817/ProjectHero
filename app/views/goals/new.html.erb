<h1>Enter a Goal</h1>
<%= form_for @goal do |g| %>
    <hr>

    <div id="text"> Category: </div><%= g.select(:category, options_for_select([['Physical', 'Physical'], ['Mental', 'Mental'], ['Spiritual', 'Spiritual'], ['Career', 'Career']], "in"), {}, {required: 'true', autofocus: 'true', class: 'form-control'})%>
    <br>
    <div id="text">Time Frame: </div><%= g.select(:timeframe, options_for_select([['Long', 'Long'], ['Medium', 'Medium'], ['Short', 'Short']], "in"), {}, {required: 'true', autofocus: 'true', class: 'form-control'})%>
    <br>
    <div id="text">Goal: </div><%= g.text_field :body, {class: 'form-control'}%>
    <br>

    <%= g.submit %>
<% end %>

