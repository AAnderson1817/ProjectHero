body {
  background-image: url('<%= asset_path('minimalist.jpg') %>');
}

h1 {
  font-size: 40px;
  color: white;
  text-align: center;
}
h2{
  font-size: 32px;
  color: #eaeaea;
  text-align:center;
}
#text {
  font-size: 18px;
  color: #d3d3d3;
  padding-top: 10px;
}
</style>
